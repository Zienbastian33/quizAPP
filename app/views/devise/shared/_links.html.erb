<%- if controller_name != 'sessions' %>
  <p>
    <%= link_to "¿Ya tienes cuenta? Inicia sesión", new_session_path(resource_name),
        class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
  </p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p>
    <%= link_to "¿No tienes cuenta? Regístrate", new_registration_path(resource_name),
        class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
  </p>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p>
    <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name),
        class: "text-gray-500 hover:text-gray-700 text-sm" %>
  </p>
<% end %>
