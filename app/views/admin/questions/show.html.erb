<div class="max-w-2xl mx-auto">
  <h1 class="text-3xl font-bold text-gray-900 mb-4"><%= @question.body %></h1>

  <% if @question.image.attached? %>
    <div class="mb-4">
      <%= image_tag @question.image, class: "max-h-64 rounded-lg" %>
    </div>
  <% end %>

  <div class="space-y-2 mb-6">
    <% @question.options.each do |option| %>
      <div class="flex items-center gap-2 px-4 py-3 rounded-lg
                  <%= option.correct? ? 'bg-green-50 border border-green-200' : 'bg-gray-50 border border-gray-200' %>">
        <% if option.correct? %>
          <span class="text-green-600 font-bold">✓</span>
        <% else %>
          <span class="text-gray-400">○</span>
        <% end %>
        <span class="<%= option.correct? ? 'text-green-800 font-medium' : 'text-gray-700' %>">
          <%= option.body %>
        </span>
      </div>
    <% end %>
  </div>

  <div class="flex gap-3">
    <%= link_to "← Volver al quiz", admin_quiz_path(@quiz),
        class: "text-gray-500 hover:text-gray-700 text-sm" %>
    <% if @quiz.draft? %>
      <%= link_to "Editar", edit_admin_quiz_question_path(@quiz, @question),
          class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
    <% end %>
  </div>
</div>
