<div class="max-w-4xl mx-auto">
  <%# ══ Header del quiz ══ %>
  <div class="flex justify-between items-start mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @quiz.title %></h1>
      <% if @quiz.published? %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
          ✓ Publicado <%= @quiz.published_at ? "el #{@quiz.published_at.strftime("%d/%m/%Y %H:%M")}" : "" %>
        </span>
      <% else %>
        <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800">
          Borrador
        </span>
      <% end %>
    </div>

    <div class="flex gap-2">
      <% if @quiz.draft? %>
        <%= link_to "Editar", edit_admin_quiz_path(@quiz),
            class: "bg-gray-100 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-200 text-sm font-medium" %>

        <% if @quiz.publishable? %>
          <%= button_to "Publicar", publish_admin_quiz_path(@quiz), method: :patch,
              class: "bg-green-600 text-white px-4 py-2 rounded-lg hover:bg-green-700 text-sm font-medium",
              data: { turbo_confirm: "¿Publicar este quiz? Los players podrán verlo y responderlo." } %>
        <% end %>

        <%= button_to "Eliminar", admin_quiz_path(@quiz), method: :delete,
            class: "bg-red-50 text-red-600 px-4 py-2 rounded-lg hover:bg-red-100 text-sm font-medium",
            data: { turbo_confirm: "¿Eliminar este quiz? Esta acción no se puede deshacer." } %>
      <% end %>
    </div>
  </div>

  <%# ══ Descripción ══ %>
  <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6 mb-6">
    <p class="text-gray-700"><%= @quiz.description %></p>

    <% if @quiz.cover_image.attached? %>
      <div class="mt-4">
        <%= image_tag @quiz.cover_image, class: "max-h-64 rounded-lg object-cover" %>
      </div>
    <% end %>

    <%= render "shared/media_player", media: @quiz.media %>
  </div>

  <%# ══ Estadísticas rápidas ══ %>
  <div class="grid grid-cols-3 gap-4 mb-6">
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 text-center">
      <p class="text-2xl font-bold text-gray-900"><%= @questions.count %></p>
      <p class="text-sm text-gray-500">Preguntas</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 text-center">
      <p class="text-2xl font-bold text-gray-900"><%= @quiz.quiz_attempts.count %></p>
      <p class="text-sm text-gray-500">Intentos</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 text-center">
      <% avg = @quiz.quiz_attempts.completed.average(:score) %>
      <p class="text-2xl font-bold text-gray-900"><%= avg ? "#{avg.round(1)}" : "—" %></p>
      <p class="text-sm text-gray-500">Promedio</p>
    </div>
  </div>

  <%# ══ Lista de preguntas ══ %>
  <div class="flex justify-between items-center mb-4">
    <h2 class="text-xl font-semibold text-gray-900">Preguntas</h2>
    <% if @quiz.draft? %>
      <%= link_to "Agregar Pregunta", new_admin_quiz_question_path(@quiz),
          class: "bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 text-sm font-medium" %>
    <% end %>
  </div>

  <% if @questions.any? %>
    <div class="space-y-4">
      <% @questions.each_with_index do |question, index| %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-5">
          <div class="flex justify-between items-start mb-3">
            <h3 class="font-medium text-gray-900">
              <span class="text-indigo-600 font-bold"><%= index + 1 %>.</span>
              <%= question.body %>
            </h3>
            <% if @quiz.draft? %>
              <div class="flex gap-2 ml-4 shrink-0">
                <%= link_to "Editar", edit_admin_quiz_question_path(@quiz, question),
                    class: "text-indigo-600 hover:text-indigo-800 text-sm" %>
                <%= button_to "Eliminar", admin_quiz_question_path(@quiz, question),
                    method: :delete, class: "text-red-500 hover:text-red-700 text-sm",
                    data: { turbo_confirm: "¿Eliminar esta pregunta?" } %>
              </div>
            <% end %>
          </div>

          <% if question.image.attached? %>
            <div class="mb-3">
              <%= image_tag question.image, class: "max-h-40 rounded-lg object-cover" %>
            </div>
          <% end %>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
            <% question.options.each do |option| %>
              <div class="flex items-center gap-2 px-3 py-2 rounded-lg text-sm
                          <%= option.correct? ? 'bg-green-50 border border-green-200 text-green-800' : 'bg-gray-50 border border-gray-200 text-gray-700' %>">
                <% if option.correct? %>
                  <span class="text-green-600 font-bold">✓</span>
                <% else %>
                  <span class="text-gray-400">○</span>
                <% end %>
                <%= option.body %>
              </div>
            <% end %>
          </div>

          <% if question.options.count != 4 || question.options.where(correct: true).count != 1 %>
            <p class="mt-2 text-xs text-red-500">
              ⚠ Esta pregunta necesita exactamente 4 opciones y 1 correcta para poder publicar el quiz.
            </p>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-8 text-center">
      <p class="text-gray-500 mb-4">Este quiz no tiene preguntas todavía.</p>
      <% if @quiz.draft? %>
        <%= link_to "Agregar primera pregunta", new_admin_quiz_question_path(@quiz),
            class: "bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700" %>
      <% end %>
    </div>
  <% end %>

  <%# ══ Publicar (si está listo) ══ %>
  <% if @quiz.draft? && @quiz.publishable? %>
    <div class="mt-6 bg-green-50 border border-green-200 rounded-xl p-6 text-center">
      <p class="text-green-800 font-medium mb-3">✓ Este quiz está listo para publicar</p>
      <%= button_to "Publicar Quiz", publish_admin_quiz_path(@quiz), method: :patch,
          class: "bg-green-600 text-white px-8 py-3 rounded-lg hover:bg-green-700 font-semibold",
          data: { turbo_confirm: "¿Publicar este quiz? Los players podrán verlo y responderlo." } %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to "← Volver a mis quizzes", admin_quizzes_path, class: "text-gray-500 hover:text-gray-700 text-sm" %>
  </div>
</div>
