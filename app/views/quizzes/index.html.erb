<div class="max-w-6xl mx-auto px-4 py-8">
  <div class="text-center mb-10">
    <h1 class="text-4xl font-bold text-gray-900 mb-3">Quizzes Disponibles</h1>
    <p class="text-lg text-gray-500">Pon a prueba tus conocimientos</p>
  </div>

  <% if @quizzes.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @quizzes.each do |quiz| %>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition group">
          <% if quiz.cover_image.attached? %>
            <%= image_tag quiz.cover_image, class: "w-full h-44 object-cover" %>
          <% else %>
            <div class="w-full h-44 bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center">
              <span class="text-6xl group-hover:scale-110 transition-transform">üß†</span>
            </div>
          <% end %>

          <div class="p-5">
            <h3 class="text-lg font-semibold text-gray-900 mb-2"><%= quiz.title %></h3>
            <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= quiz.description %></p>

            <div class="flex justify-between items-center text-sm text-gray-400 mb-4">
              <span><%= quiz.total_questions %> preguntas</span>
              <span>Por <%= quiz.user.name %></span>
            </div>

            <%= link_to "Ver Quiz ‚Üí", quiz_path(quiz),
                class: "block w-full text-center bg-indigo-600 text-white py-2.5 rounded-lg hover:bg-indigo-700 font-medium transition" %>
          </div>
        </div>
      <% end %>
    </div>

    <%# ‚ïê‚ïê Paginaci√≥n (Pagy v43) ‚ïê‚ïê %>
    <div class="mt-10 flex justify-center">
      <%== @pagy.series_nav %>
    </div>
  <% else %>
    <div class="text-center py-16">
      <p class="text-5xl mb-4">üìù</p>
      <p class="text-xl text-gray-500">No hay quizzes disponibles por el momento.</p>
    </div>
  <% end %>
</div>
